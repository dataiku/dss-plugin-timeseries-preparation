{
    "meta" : {
        "label" : "4. Timeseries segmenting",
        "description" : "Segment timeseries based on thresholds.",
        "icon" : "icon-reorder"
    },
    "kind" : "PYTHON",
    "selectableFromDataset" : "input_dataset",
    "inputRoles" : [
        {
            "name": "input_dataset",
            "label": "Input timeseries",
            "description": "Dataset containing your timeseries data.",
            "arity": "UNARY",
            "required": true,
            "acceptsDataset": true,
            "acceptsFolder": false
        }
    ],
    "outputRoles" : [
        {
            "name": "output_dataset",
            "label": "Output timeseries",
            "description": "",
            "arity": "UNARY",
            "required": true,
            "acceptsDataset": true
        }
    ],
    "params": [
        {
            "name": "datetime_column",
            "label" : "Timestamp column",
            "type": "COLUMN",
            "columnRole":"input_dataset",
            "mandatory": true
        },
        {
            "name": "sep",
            "label": "Threshold parameters",
            "type": "SEPARATOR"
        },
        {
            "name": "segment_column",
            "label" : "Timeseries to segment",
            "type": "COLUMN",
            "columnRole":"input_dataset",
            "mandatory": true
        },
        {
            "name": "min_threshold",
            "label" : "Minimal value (lower boundary)",
            "type": "DOUBLE",
            "defaultValue" : 0
        },
        {
            "name": "max_threshold",
            "label" : "Maximum value (upper boundary)",
            "type": "DOUBLE",
            "defaultValue" : 10
        },
        {
            "name": "sep1",
            "label": "Segmentation parameters",
            "type": "SEPARATOR"
        },
        {
            "name" : "time_unit",
            "label" : "Unit",
            "type" : "SELECT",
            "selectChoices" : [
                    { "value" : "nanosecond", "label" : "nanosecond"},
                    { "value" : "microsecond", "label" : "microsecond"},
                    { "value" : "millisecond", "label" : "millisecond"},
                    { "value" : "second", "label" : "second"},
                    { "value" : "minute", "label" : "minute"},
                    { "value" : "hour", "label" : "hour"},
                    { "value" : "day", "label" : "day"},
                    { "value" : "row", "label" : "row"}
            ],
            "defaultValue": "row"
        },
        {
            "name": "min_segment_duration_value",
            "label" : "Minimal segment duration",
            "description": "Values must be within thresholds for more than this duration to create a segment.",
            "type": "DOUBLE",
            "defaultValue" : 10
        },
        {
            "name": "max_noise_duration_value",
            "label" : "Maximum aberration duration",
            "description": "Exiting thresholds for less than this duration is ignored.",
            "type": "DOUBLE",
            "defaultValue" : 10
        },
        {
            "name": "sep3",
            "label": "Partitioning",
            "type": "SEPARATOR"
        },
        {
            "name": "advanced_activated",
            "label": "Timeseries values are folded",
            "description": "Activate if you use a single column for the values of multiple timeseries.",
            "type": "BOOLEAN"
        },
        {
            "name": "groupby_col",
            "label" : "Partitioning column",
            "type": "COLUMN",
            "columnRole":"input_dataset",
            "mandatory" : false,
            "description": "Treats each value of this column as a series identifier.",
            "visibilityCondition": "model.advanced_activated"

        }
    ]
}
