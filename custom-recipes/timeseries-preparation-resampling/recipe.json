{
    "meta" : {
        "label" : "1. Timeseries resampling",
        "description" : "Resample timeseries by performing interpolation or extrapolation.",
        "icon" : "icon-time"
    },
    "kind" : "PYTHON",
    "selectableFromDataset" : "input_dataset",
    "inputRoles" : [
        {
            "name": "input_dataset",
            "label": "Input timeseries",
            "description": "Dataset containing your timeseries data.",
            "arity": "UNARY",
            "required": true,
            "acceptsDataset": true,
            "acceptsFolder": false
        }
    ],
    "outputRoles" : [
        {
            "name": "output_dataset",
            "label": "Output timeseries",
            "description": "Dataset with equispaced timeseries.",
            "arity": "UNARY",
            "required": true,
            "acceptsDataset": true
        }
    ],
    "params": [
        {
            "name": "datetime_column",
            "label" : "Timestamp column",
            "type": "COLUMN",
            "columnRole":"input_dataset",
            "mandatory": true
        },
        {
            "name": "sep1",
            "label": "Resampling parameters",
            "type": "SEPARATOR"
        },
        {
            "name" : "time_unit",
            "label" : "Time unit",
            "type" : "SELECT",
            "selectChoices" : [
                    { "value" : "nanosecond", "label" : "Nanosecond"},
                    { "value" : "microsecond", "label" : "Microsecond"},
                    { "value" : "millisecond", "label" : "Millisecond"},
                    { "value" : "second", "label" : "Second"},
                    { "value" : "minute", "label" : "Minute"},
                    { "value" : "hour", "label" : "Hour"},
                    { "value" : "day", "label" : "Day"},
                    { "value" : "week", "label" : "Week"},            
                    { "value" : "month", "label" : "Month"},            
                    { "value" : "year", "label" : "Year"}                      
                ],
            "defaultValue": "second"
        },
        {
            "name": "time_step",
            "label" : "Time step",
            "type": "DOUBLE",
            "defaultValue" : 10
        },
        {
            "name": "offset",
            "label" : "Offset beginning",
            "description": "Timesteps to skip at the beginning of the series, in the chosen time unit.",
            "type": "DOUBLE",
            "defaultValue" : 0
        },
        {
            "name": "crop",
            "label" : "Crop ending",
            "description": "Timesteps to skip at the end of the series, in the chosen time unit.",
            "type": "DOUBLE",
            "defaultValue" : 0
        },
        {
            "name": "sep2",
            "label": "Methods",
            "type": "SEPARATOR"
        },
        {
            "name" : "interpolation_method",
            "label" : "Interpolation method",
            "description": "",
            "type" : "SELECT",
            "selectChoices" : [
                    { "value" : "nearest", "label" : "nearest"},
                    { "value" : "previous", "label" : "previous"},
                    { "value" : "next", "label" : "next"},
                    { "value" : "zero", "label" : "zero"},
                    { "value" : "slinear", "label" : "slinear"},
                    { "value" : "linear", "label" : "linear"},
                    { "value" : "quadratic", "label" : "quadratic"},
                    { "value" : "cubic", "label" : "cubic"},
                    { "value" : "None", "label" : "none"}
            ],
            "defaultValue": "linear"
        },
        {
            "name" : "extrapolation_method",
            "label" : "Extrapolation method",
            "description": "",
            "type" : "SELECT",
            "selectChoices" : [
                    { "value" : "clip", "label" : "clip"},
                    { "value" : "interpolation", "label" : "same as interpolation"},
                    { "value" : "None", "label" : "none"}
            ],
            "defaultValue": "clip"
        },
        {
            "name": "sep3",
            "label": "Partitioning",
            "type": "SEPARATOR"
        },
        {
            "name": "advanced_activated",
            "label": "Timeseries values are folded",
            "description": "Activate if you use a single column for the values of multiple timeseries.",
            "type": "BOOLEAN"
        },
        {
            "name": "groupby_col",
            "label" : "Partitioning column",
            "type": "COLUMN",
            "columnRole":"input_dataset",
            "mandatory" : false,
            "description": "Treats each value of this column as a series identifier.",
            "visibilityCondition": "model.advanced_activated"

        }
    ]
}
