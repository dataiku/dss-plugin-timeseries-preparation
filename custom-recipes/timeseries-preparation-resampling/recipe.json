{
    "meta" : {
        "label" : "Timeseries resampling",
        "description" : "Resample the timeseries and perform interpolation/extrapolation.",
        "icon" : "icon-time"
    },
    "kind" : "PYTHON",
    "selectableFromDataset" : "input_dataset",
    "inputRoles" : [
        {
            "name": "input_dataset",
            "label": "Input dataset",
            "description": "",
            "arity": "UNARY",
            "required": true,
            "acceptsDataset": true,
            "acceptsFolder": false
        }
    ],
    "outputRoles" : [
        {
            "name": "output_dataset",
            "label": "Output dataset",
            "description": "Dataset with equispaced timeseries.",
            "arity": "UNARY",
            "required": true,
            "acceptsDataset": true
        }
    ],
    "params": [
        {
            "name": "sep0",
            "label": "Data parameters",
            "type": "SEPARATOR"
        },
        {
            "name": "datetime_column",
            "label" : "Date column",
            "type": "COLUMN",
            "columnRole":"input_dataset",
            "mandatory": true
        },
        {
            "name": "sep1",
            "label": "Resampling parameters",
            "type": "SEPARATOR"
        },
        {
            "name" : "time_unit",
            "label" : "Time unit",
            "type" : "SELECT",
            "selectChoices" : [
                    { "value" : "nanosecond", "label" : "nanosecond"},
                    { "value" : "microsecond", "label" : "microsecond"},
                    { "value" : "millisecond", "label" : "millisecond"},
                    { "value" : "second", "label" : "second"},
                    { "value" : "minute", "label" : "minute"},
                    { "value" : "hour", "label" : "hour"},
                    { "value" : "day", "label" : "day"},
                    { "value" : "week", "label" : "week"},
                    { "value" : "month", "label" : "month"},
                    { "value" : "quarter", "label" : "quarter"},
                    { "value" : "year", "label" : "year"}
            ],
            "defaultValue": "second"
        }, 
        {
            "name": "time_step_size",
            "label" : "Time step size",
            "type": "DOUBLE",
            "defaultValue" : 10
        },
        {
            "name": "offset",
            "label" : "Offset",
            "type": "DOUBLE",
            "defaultValue" : 0
        },
        {
            "name": "crop",
            "label" : "Crop",
            "type": "DOUBLE",
            "defaultValue" : 0
        },
        {
            "name": "sep2",
            "label": "Method",
            "type": "SEPARATOR"
        },
        {
            "name" : "interpolation_method",
            "label" : "Interpolation method",
            "type" : "SELECT",
            "selectChoices" : [
                    { "value" : "nearest", "label" : "nearest"},
                    { "value" : "previous", "label" : "previous"},
                    { "value" : "next", "label" : "next"},
                    { "value" : "linear", "label" : "linear"},
                    { "value" : "quadratic", "label" : "quadratic"},
                    { "value" : "cubic", "label" : "cubic"},
                    { "value" : "barycentric", "label" : "barycentric"},
                    { "value" : "None", "label" : "none"}
            ],
            "defaultValue": "linear"
        },
        {
            "name" : "extrapolation_method",
            "label" : "Extrapolation method",
            "type" : "SELECT",
            "selectChoices" : [
                    { "value" : "clip", "label" : "clip"},
                    { "value" : "interpolation", "label" : "same as interpolation"},
                    { "value" : "None", "label" : "none"}
            ],
            "defaultValue": "clip"
        },
        {
            "name": "sep3",
            "label": "Advanced",
            "type": "SEPARATOR"
        }, 
        {
            "name": "advance_activate",
            "label": "Open advanced options",
            "type": "BOOLEAN"
        },
        {
            "name": "groupby_cols",
            "label" : "Column to groupby",
            "type": "COLUMN",
            "columnRole":"input_dataset",
            "mandatory" : false,
            "description": "In case we have one timeserie per value of this column.",
            "visibilityCondition": "model.advance_activate"

        }
    ]
}