{
    "meta": {
        "label": "Time series extrema extraction",
        "description": "Extract values around an extremum.",
        "icon": "icon-zoom-in",
        "displayOrderRank": 3
    },
    "kind": "PYTHON",
    "selectableFromDataset": "input_dataset",
    "inputRoles": [
        {
            "name": "input_dataset",
            "label": "Input dataset",
            "description": "Dataset containing your time series data.",
            "arity": "UNARY",
            "required": true,
            "acceptsDataset": true,
            "acceptsFolder": false
        }
    ],
    "outputRoles": [
        {
            "name": "output_dataset",
            "label": "Output dataset",
            "description": "",
            "arity": "UNARY",
            "required": true,
            "acceptsDataset": true
        }
    ],
    "params": [
        {
            "name": "datetime_column",
            "label": "Timestamp column",
            "type": "COLUMN",
            "columnRole": "input_dataset",
            "allowedColumnTypes": ["date"],
            "mandatory": true
        },
        {
            "name": "extrema_column",
            "label": "Find extremum in column",
            "type": "COLUMN",
            "columnRole": "input_dataset",
            "mandatory": true
        },
        {
            "name": "extrema_type",
            "label": "Extremum type",
            "type": "SELECT",
            "selectChoices": [
                { "value": "min", "label": "Global minimum"},
                { "value": "max", "label": "Global maximum"}
            ],
            "defaultValue": "max"
        },
        {
            "name": "sep1",
            "label": "Window parameters",
            "description": "The window will be applied to the values of all other timeseries, around the timestamp of the extremum that was found.",
            "type": "SEPARATOR"
        },
        {
            "name": "causal_window",
            "label": "Causal window",
            "description": "Set the on-going row at the right border of the window.",
            "type": "BOOLEAN"
        },
        {
            "name": "window_type",
            "label": "Shape",
            "type": "SELECT",
            "selectChoices": [
                { "value": "none", "label": "Rectangular"},
                { "value": "triang", "label": "Triangle"},
                { "value": "bartlett", "label": "Bartlett"},
                { "value": "gaussian", "label": "Gaussian"},
                { "value": "parzen", "label": "Parzen"},
                { "value": "hamming", "label": "Hamming"},
                { "value": "blackman", "label": "Blackman"}
            ],
            "defaultValue": "none"
        },
        {
            "name": "desc_none",
            "description": "A simple rectangular window with a flat profile",
            "type": "SEPARATOR",
            "visibilityCondition": "model.window_type == 'none'"
        },
        {
            "name": "desc_triang",
            "description": "A triangle window, linearly increasing then decreasing",
            "type": "SEPARATOR",
            "visibilityCondition": "model.window_type == 'triang'"
        },
        {
            "name": "desc_bartlett",
            "description": "Another triangle window, only its normalization differs",
            "type": "SEPARATOR",
            "visibilityCondition": "model.window_type == 'bartlett'"
        },
        {
            "name": "desc_gaussian",
            "description": "A nonlinear window of gaussian (exponential) shape",
            "type": "SEPARATOR",
            "visibilityCondition": "model.window_type == 'gaussian'"
        },
        {
            "name": "desc_parzen",
            "description": "A nonlinear window made of connected polynomials of the third degree",
            "type": "SEPARATOR",
            "visibilityCondition": "model.window_type == 'parzen'"
        },
        {
            "name": "desc_hamming",
            "description": "A nonlinear window obtained with a sum of cosines (trigonometric polynomial of order 1)",
            "type": "SEPARATOR",
            "visibilityCondition": "model.window_type == 'hamming'"
        },
        {
            "name": "desc_blackman",
            "description": "A nonlinear window obtained with a sum of cosines (trigonometric polynomial of order 2)",
            "type": "SEPARATOR",
            "visibilityCondition": "model.window_type == 'blackman'"
        },
        {
            "name": "gaussian_std",
            "label": "Standard deviation of the gaussian window",
            "type": "DOUBLE",
            "defaultValue": 1.0,
            "visibilityCondition": "model.window_type == 'gaussian'"

        },
        {
            "name": "window_width",
            "label": "Width",
            "type": "DOUBLE",
            "defaultValue": 1
        },
        {
            "name": "window_unit",
            "label": "Unit",
            "type": "SELECT",
            "selectChoices": [
                { "value": "nanoseconds", "label": "Nanoseconds"},
                { "value": "microseconds", "label": "Microseconds"},
                { "value": "milliseconds", "label": "Milliseconds"},
                { "value": "seconds", "label": "Seconds"},
                { "value": "minutes", "label": "Minutes"},
                { "value": "hours", "label": "Hours"},
                { "value": "days", "label": "Days"},
                { "value": "weeks", "label": "Weeks"},
                { "value": "months", "label": "Months"},
                { "value": "years", "label": "Years"}
            ],
            "defaultValue": "seconds"
        },
        {
            "name": "closed_option",
            "label": "Include window bounds",
            "description": "Includes the sides of the window to compute aggregations.",
            "type": "SELECT",
            "selectChoices": [
                { "value": "left", "label": "Yes, left only"},
                { "value": "right", "label": "Yes, right only"},
                { "value": "both", "label": "Yes, both"},
                { "value": "neither", "label": "No"}
            ],
            "defaultValue": "left",
            "visibilityCondition": "model.causal_window"
        },
        {
            "name": "sep3",
            "label": "Advanced data format",
            "type": "SEPARATOR"
        },
        {
            "name": "advanced_activated",
            "label": "Long format",
            "description": "Use this option if your data is in the long format, with one column identifying multiple time series and a single column for all values.",
            "type": "BOOLEAN"
        },
        {
            "name": "groupby_column",
            "label": "Column with identifier",
            "type": "COLUMN",
            "columnRole": "input_dataset",
            "mandatory": false,
            "description": "",
            "visibilityCondition": "model.advanced_activated"

        }
    ]
}
